{
  "manifest_version": 3,

  "name": "YouTube Spam Highlighter",

  "version": "1.0",

  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],

  "host_permissions": [
    "https://www.youtube.com/*",
    "http://127.0.0.1:8000/*"
  ],

  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],

  "action": {
    "default_popup": "popup.html"
  }
  
}